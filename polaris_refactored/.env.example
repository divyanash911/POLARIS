# POLARIS Framework Environment Variables
# Copy this file to .env and update with your actual values

# LLM Configuration (Required for Agentic Reasoning)
GOOGLE_AI_API_KEY=your_gemini_api_key_here
# Alternative LLM providers (uncomment if using)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# NATS Message Bus Configuration
NATS_URL=nats://localhost:4222
NATS_USERNAME=
NATS_PASSWORD=
NATS_TOKEN=

# Logging Configuration
LOGGER_LEVEL=DEBUG
LOGGER_FORMAT=json
LOGGER_OUTPUT=both

# Framework Configuration
POLARIS_SERVICE_NAME=polaris-swim-system
POLARIS_ENVIRONMENT=development
POLARIS_VERSION=2.0.0

# Digital Twin Configuration
DIGITAL_TWIN_GRPC_HOST=0.0.0.0
DIGITAL_TWIN_GRPC_PORT=50051

# SWIM System Configuration
SWIM_HOST=localhost
SWIM_PORT=4242
SWIM_TIMEOUT=30.0

# Observability Configuration
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true
METRICS_COLLECTION_INTERVAL=5
TRACING_SAMPLE_RATE=0.3

# Meta Learner Configuration
META_LEARNER_ENABLED=true
META_LEARNER_ANALYSIS_INTERVAL=30

# Development/Production Overrides
# Set to 'production' for production deployment
DEPLOYMENT_MODE=development
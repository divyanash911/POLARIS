{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "POLARIS World Model Configuration Schema",
  "description": "Schema for validating World Model configuration files",
  "type": "object",
  "required": ["implementation", "config"],
  "properties": {
    "implementation": {
      "type": "string",
      "description": "World Model implementation type",
      "enum": ["mock", "gemini", "statistical", "hybrid"],
      "default": "mock"
    },
    "config": {
      "type": "object",
      "description": "Implementation-specific configuration options"
    },
    "env_overrides": {
      "type": "object",
      "description": "Environment variable override keys for dynamic runtime control",
      "properties": {
        "temperature_override": { "type": "string" },
        "gemini_model_override": { "type": "string" },
        "api_key_env_override": { "type": "string" },
        "vector_store_provider_override": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": { "properties": { "implementation": { "const": "gemini" } } },
      "then": {
        "properties": {
          "config": {
            "type": "object",
            "required": ["api_key_env", "model"],
            "properties": {
              "api_key_env": { "type": "string", "minLength": 1 },
              "model": { "type": "string", "minLength": 1 },
              "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
              "max_tokens": { "type": "integer", "minimum": 1 },
              "concurrent_requests": { "type": "integer", "minimum": 1 },
              "vector_store": {
                "type": "object",
                "properties": {
                  "provider": { "type": "string", "minLength": 1 }
                },
                "required": ["provider"],
                "additionalProperties": true
              }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "implementation": { "const": "mock" } } },
      "then": {
        "properties": {
          "config": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "implementation": { "const": "statistical" } } },
      "then": {
        "properties": {
          "config": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "implementation": { "const": "hybrid" } } },
      "then": {
        "properties": {
          "config": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  ]
}
